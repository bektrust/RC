Процедура ЗаполнениеПервоначальногоСрокаРассмотрения_1_0_5_2(Параметры) Экспорт
	
	Если Параметры.ПрогрессВыполнения.ВсегоОбъектов = 0 Тогда
		
		ЗапросКоличествоОбращений = Новый Запрос(
			"ВЫБРАТЬ
			|	КОЛИЧЕСТВО(Обращения.Ссылка) КАК Количество
			|ИЗ
			|	Справочник.Обращения КАК Обращения
			|ГДЕ
			|	Обращения.СрокРассмотрения <> ДАТАВРЕМЯ(1, 1, 1)
			|	И Обращения.СрокРассмотренияПервоначальный = ДАТАВРЕМЯ(1, 1, 1)");
		
		РезультатЗапроса = ЗапросКоличествоОбращений.Выполнить();
		Выборка = РезультатЗапроса.Выбрать();
		Параметры.ПрогрессВыполнения.ВсегоОбъектов = ?(Выборка.Следующий(), Выборка.Количество, 0);
		
	КонецЕсли;
	
	ОбработаноОбъектов = 0;
	ПроблемныхОбъектов = 0;
	
	// Заполнение реквизита "СрокРассмотренияПервоначальный" справочника "Обращения".
	ЗапросОбращения = Новый Запрос(
		"ВЫБРАТЬ ПЕРВЫЕ 1000
		|	Обращения.Ссылка КАК Ссылка
		|ИЗ
		|	Справочник.Обращения КАК Обращения
		|ГДЕ
		|	Обращения.СрокРассмотрения <> ДАТАВРЕМЯ(1, 1, 1)
		|	И Обращения.СрокРассмотренияПервоначальный = ДАТАВРЕМЯ(1, 1, 1)
		|
		|УПОРЯДОЧИТЬ ПО
		|	Обращения.ДатаДокумента УБЫВ");
	
	РезультатЗапросаОбращений = ЗапросОбращения.Выполнить();
	ВыборкаОбращений = РезультатЗапросаОбращений.Выбрать();
	Пока ВыборкаОбращений.Следующий() Цикл
		
		Попытка
			
			НачатьТранзакцию();
			Попытка
				
				Блокировка = Новый БлокировкаДанных;
				ЭлементБлокировки = Блокировка.Добавить("Справочник.Обращения");
				ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
				ЭлементБлокировки.УстановитьЗначение("Ссылка", ВыборкаОбращений.Ссылка);
				Блокировка.Заблокировать();
				
				ОбращениеОбъект = ВыборкаОбращений.Ссылка.ПолучитьОбъект();
				Если Не ЗначениеЗаполнено(ОбращениеОбъект.СрокРассмотренияПервоначальный) Тогда
					ОбращениеОбъект.СрокРассмотренияПервоначальный = ОбращениеОбъект.СрокРассмотрения;
					ОбновлениеИнформационнойБазы.ЗаписатьДанные(ОбращениеОбъект);
				КонецЕсли;
				
				ЗафиксироватьТранзакцию();
				
			Исключение
				ОтменитьТранзакцию();
				ВызватьИсключение;
			КонецПопытки;
			
			ОбработаноОбъектов = ОбработаноОбъектов + 1;
			
		Исключение
			
			ПроблемныхОбъектов = ПроблемныхОбъектов + 1;
			
			ТекстСообщения = СтрШаблон(
				НСтр("ru = 'Не удалось обработать Обращение %1 по причине:
					|%2'"),
				ВыборкаОбращений.Ссылка,
				ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			ЗаписьЖурналаРегистрации(
				ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(),
				УровеньЖурналаРегистрации.Предупреждение,
				Метаданные.Справочники.Обращения,
				ВыборкаОбращений.Ссылка,
				ТекстСообщения);
			
		КонецПопытки;
		
	КонецЦикла;
	
	Если ОбработаноОбъектов = 0 И ПроблемныхОбъектов > 0 Тогда
		ТекстСообщения = СтрШаблон(
			НСтр("ru = 'Процедуре ЗаполнениеПервоначальногоСрокаРассмотрения_1_0_5_2 не удалось обработать некоторые Обращения (пропущены): %1'"),
			ПроблемныхОбъектов);
		ВызватьИсключение ТекстСообщения;
	КонецЕсли;
	
	Параметры.ПрогрессВыполнения.ОбработаноОбъектов = 
		Параметры.ПрогрессВыполнения.ОбработаноОбъектов + ОбработаноОбъектов;
	Параметры.ОбработкаЗавершена = ОбработаноОбъектов = 0;
	
