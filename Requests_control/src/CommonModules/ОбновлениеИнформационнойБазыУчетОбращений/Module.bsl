////////////////////////////////////////////////////////////////////////////////
// Заполнение пустой ИБ

// Демонстрирует процедуру-обработчик обновления и первоначального заполнения
// данных ИБ, которая выполняется однократно при переходе на версию 1.0.0.0.
//
Процедура ПервыйЗапуск() Экспорт
	
	Константы.ИспользоватьДополнительныеРеквизитыИСведения.Установить(Ложь);
	
	ПараметрыНабора = УправлениеСвойствами.СтруктураПараметровНабораСвойств();
	ПараметрыНабора.Используется = Истина;
	
	Константы.ВыполнятьЗамерыПроизводительности.Установить(Истина);
	
	Если СтандартныеПодсистемыСервер.ЭтоБазоваяВерсияКонфигурации() Тогда 
		Константы.ПоказыватьПользователей.Установить(Ложь);
	Иначе 
		Константы.ПоказыватьПользователей.Установить(Истина);
	КонецЕсли;
	
	// Настройка центра мониторинга "по умолчанию"
	ПараметрыЦентраМониторинга = ЦентрМониторингаСлужебный.ПолучитьПараметрыЦентраМониторингаВнешнийВызов();
	
	ПараметрыСервисаПоУмолчанию = ЦентрМониторингаСлужебный.ПолучитьПараметрыПоУмолчаниюВнешнийВызов();
	ПараметрыЦентраМониторинга.Вставить("СерверПоУмолчанию", ПараметрыСервисаПоУмолчанию.Сервер);
	ПараметрыЦентраМониторинга.Вставить("АдресРесурсаПоУмолчанию", ПараметрыСервисаПоУмолчанию.АдресРесурса);
	ПараметрыЦентраМониторинга.Вставить("ПортПоУмолчанию", ПараметрыСервисаПоУмолчанию.Порт);
	ПараметрыЦентраМониторинга.Вставить("ВключитьЦентрМониторинга", Истина);
	ПараметрыЦентраМониторинга.Вставить("РегистрироватьПроизводительность", Истина);
	ПараметрыЦентраМониторинга.Вставить("РегистрироватьПроизводительностьТехнологическую", Истина);
	
	ЦентрМониторингаСлужебный.УстановитьПараметрыЦентраМониторингаВнешнийВызов(ПараметрыЦентраМониторинга);
	
	РегЗадание = ЦентрМониторингаСлужебный.ПолучитьРегламентноеЗаданиеВнешнийВызов("СборИОтправкаСтатистики", Истина);
	ЦентрМониторингаСлужебный.УстановитьРасписаниеПоУмолчаниюВнешнийВызов(РегЗадание);
	// Конец настройки центра мониторинга
	
	// Виды обращений
	ВидыОбращений = Новый СписокЗначений;
	ВидыОбращений.Добавить("Жалоба");
	ВидыОбращений.Добавить("Запрос");
	ВидыОбращений.Добавить("Заявление");
	ВидыОбращений.Добавить("Устное обращение");
	
	Для Каждого ВидОбращения Из ВидыОбращений Цикл
		Если Справочники.ВидыОбращений.НайтиПоНаименованию(ВидОбращения.Значение).Пустая() Тогда
			ВидОбращенияОбъект = Справочники.ВидыОбращений.СоздатьЭлемент();
			ВидОбращенияОбъект.Наименование = ВидОбращения.Значение;
			ВидОбращенияОбъект.Записать();
		КонецЕсли;
	КонецЦикла;
	
	// Способы доставки
	СпособыДоставки = Новый СписокЗначений;
	СпособыДоставки.Добавить("Почта");
	СпособыДоставки.Добавить("Email");
	СпособыДоставки.Добавить("Факс");
	СпособыДоставки.Добавить("Курьер");
	СпособыДоставки.Добавить("Фельдсвязь");
	
	Для Каждого СпособДоставки Из СпособыДоставки Цикл
		Если Справочники.СпособыДоставки.НайтиПоНаименованию(СпособДоставки.Значение).Пустая() Тогда
			СпособДоставкиОбъект = Справочники.СпособыДоставки.СоздатьЭлемент();
			СпособДоставкиОбъект.Наименование = СпособДоставки.Значение;
			СпособДоставкиОбъект.Записать();
		КонецЕсли;
	КонецЦикла;
	
	// нумератор
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ ПЕРВЫЕ 1
	               |	Нумераторы.Ссылка КАК Ссылка
	               |ИЗ
	               |	Справочник.Нумераторы КАК Нумераторы
	               |ГДЕ
	               |	Нумераторы.ПометкаУдаления = ЛОЖЬ";
	Если Не Запрос.Выполнить().Пустой() Тогда
		Возврат;
	КонецЕсли;	
	
	НумераторОбъект = Справочники.Нумераторы.СоздатьЭлемент();
	НумераторОбъект.Наименование = НСтр("ru = 'По умолчанию'");
	НумераторОбъект.ФорматНомера  = "[Номер]";
	Нумерация.СформироватьПримерНомера(НумераторОбъект.ФорматНомера, НумераторОбъект.Пример, ""); 
	НумераторОбъект.Записать();
	
	МенеджерЗаписи = РегистрыСведений.НастройкиНумерации.СоздатьМенеджерЗаписи();
	МенеджерЗаписи.ВидОбращения = Справочники.ВидыОбращений.ПустаяСсылка();
	МенеджерЗаписи.СпособНумерации = Перечисления.СпособыНумерации.Автоматически;
	МенеджерЗаписи.Нумератор = НумераторОбъект.Ссылка;
	
	МенеджерЗаписи.Записать();
	
	// Показывать пользователей
	Если СтандартныеПодсистемыСервер.ЭтоБазоваяВерсияКонфигурации() Тогда 
		Константы.ПоказыватьПользователей.Установить(Ложь);
	Иначе 
		Константы.ПоказыватьПользователей.Установить(Истина);
	КонецЕсли;
	
	Константы.ДатаРедакцииКлассификатора.Установить(ТекущаяДатаКлассификатора());
	
КонецПроцедуры

